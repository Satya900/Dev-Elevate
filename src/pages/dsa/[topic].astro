    },
    'dynamic-programming': {
      title: 'Dynamic Programming',
      tag: 'Dynamic Programming',
      icon: 'ðŸ§®',
      path: '/dsa/dynamic-programming'
    },
    'greedy': {
      title: 'Greedy Algorithms',
      tag: 'Greedy',
      icon: 'ðŸŽ¯',
      path: '/dsa/greedy'
    },
    'backtracking': {
      title: 'Backtracking',
      tag: 'Backtracking',
      icon: 'â†©ï¸',
