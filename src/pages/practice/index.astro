---
import Layout from '../../layouts/Layout.astro';
import problems from '../../content/practice/linked-list-problems.json';

---

<Layout title="Practice Problems">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">Practice Problems</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {problems.problems.map((problem) => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <a href={`/practice/${problem.id}`} class="block p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xl font-bold text-gray-800">{problem.title}</h2>
              <span class={`px-3 py-1 rounded-full text-sm ${
                problem.difficulty === 'Easy' ? 'bg-green-100 text-green-800' :
                problem.difficulty === 'Medium' ? 'bg-yellow-100 text-yellow-800' :
                'bg-red-100 text-red-800'
              }`}>
                {problem.difficulty}
              </span>
            </div>
            <p class="text-gray-600">{problem.description}</p>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>