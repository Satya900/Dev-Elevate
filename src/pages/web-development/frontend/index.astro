---
import Layout from '../../../layouts/Layout.astro';

const topics = [
  {
    title: 'HTML & CSS',
    path: '/web-development/frontend/html-css',
    icon: '🎨',
    description: 'Master the fundamentals of web development'
  },
  {
    title: 'JavaScript',
    path: '/web-development/frontend/javascript',
    icon: '💛',
    description: 'Learn modern JavaScript programming'
  },
  {
    title: 'React',
    path: '/web-development/frontend/react',
    icon: '⚛️',
    description: 'Build interactive UIs with React'
  },
  {
    title: 'Vue',
    path: '/web-development/frontend/vue',
    icon: '💚',
    description: 'Create dynamic web apps with Vue.js'
  },
  {
    title: 'Angular',
    path: '/web-development/frontend/angular',
    icon: '🅰️',
    description: 'Enterprise-level applications with Angular'
  },
  {
    title: 'TypeScript',
    path: '/web-development/frontend/typescript',
    icon: '📘',
    description: 'Add static typing to your JavaScript'
  }
];
---

<Layout title="Frontend Development">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">Frontend Development</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {topics.map(topic => (
        <a href={topic.path} class="block">
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
            <div class="p-6">
              <div class="flex items-center gap-3 mb-4">
                <span class="text-3xl">{topic.icon}</span>
                <h2 class="text-2xl font-bold text-gray-800">{topic.title}</h2>
              </div>
              <p class="text-gray-600">{topic.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>